{
  "lexicon": 1,
  "id": "network.comind.devlog",
  "defs": {
    "main": {
      "type": "record",
      "description": "Development log entry - cognition record for tracking agent development",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["recordType", "title", "content", "createdAt"],
        "properties": {
          "recordType": {
            "type": "string",
            "enum": ["milestone", "learning", "decision", "state", "reflection"],
            "description": "Type of development log entry"
          },
          "title": {
            "type": "string",
            "maxLength": 100,
            "description": "Brief title for the entry"
          },
          "content": {
            "type": "string",
            "maxLength": 1000,
            "description": "Full content of the entry"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Tags for categorization"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime"
          }
        }
      }
    }
  }
}
