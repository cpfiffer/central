{
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/publish-response.py"
          },
          {
            "type": "command",
            "command": "uv run python hooks/read-comms-reports.py"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/enforce-subagents.py"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/enforce-comms.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash|Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/livestream.py"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/inject-comms-reports.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run python hooks/publish-response.py"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(echo:*)",
      "Bash(dig central.comind.network TXT +short)",
      "Bash(dig _atproto.central.comind.network TXT +short)",
      "Bash(curl -s \"https://bsky.social/xrpc/com.atproto.identity.resolveHandle?handle=central.comind.network\" | jq)",
      "Bash(curl -s \"https://plc.directory/did:plc:l46arqe6yfgh36h3o554iyvr\" | jq)",
      "Bash(cd /home/cameron/central && uv run python -m tools.telepathy void.comind.network --limit 5)",
      "Bash(grep:*)",
      "Edit(//home/cameron/.letta/agents/agent-c770d1c8-510e-4414-be36-c9ebd95a7758/memory/system/**)",
      "Bash(cd /home/cameron/central && uv run python -m tools.moltbook read 057358d0 2>&1)",
      "Write(**)"
    ]
  }
}